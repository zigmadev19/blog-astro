---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout>
    <div class="grid min-h-screen place-content-center px-4">
        <div class="text-center">
            <h1 class="text-9xl font-black text-yellow-500">404</h1>

            <p class="text-2xl font-bold tracking-tight text-zinc-700 dark:text-zinc-300  sm:text-4xl">Uh-oh!</p>

            <p class="mt-4 text-gray-500">We can't find that page.</p>

            <a
            href="/"
            class="mt-6 inline-block rounded bg-yellow-500 px-5 py-3 text-sm font-medium text-zinc-100 dark:text-zinc-200 hover:opacity-80"
            >
            Go Back Home
            </a>
        </div>
    </div>
</MainLayout>
