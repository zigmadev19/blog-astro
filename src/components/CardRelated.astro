---
import { Image } from "astro:assets";

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="group grid grid-cols-6 rounded-xl overflow-hidden bg-zinc-100 dark:bg-zinc-900">
    <div class="col-span-2 aspect-square overflow-hidden">
        <Image class="group-hover:scale-110 transition object-cover w-full h-full" src={post.data.image} alt={post.data.title} />
    </div>

    <div class="col-span-4 p-2 space-y-2">
        <h5 class="group-hover:text-yellow-500 line-clamp-2 transition text-md font-bold tracking-tight text-zinc-700 dark:text-zinc-200">{post.data.title}</h5>

         <time datetime={post.data.publishDate} class="block text-xs text-white/90">{post.data.publishDate.toLocaleDateString('en-GB', {
                year: 'numeric', month: 'long', day: 'numeric',
            })}</time>
    </div>
</a>
