---
import { Image } from "astro:assets";

const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="group flex flex-col rounded-2xl overflow-hidden bg-zinc-100 dark:bg-zinc-900">
    <div class="w-full h-48 overflow-hidden">
        <Image class="group-hover:scale-110 transition object-cover w-full h-full" src={post.data.image} alt={post.data.title} />
    </div>
    <div class="flex flex-col justify-between p-4 leading-normal">
        <h5 class="group-hover:text-yellow-500 transition text-md font-bold tracking-tight text-zinc-700 dark:text-zinc-200">{post.data.title}</h5>
    </div>
</a>
