---
import { Image } from "astro:assets";
import type { CollectionEntry } from 'astro:content';
interface Props {
  featurePost: CollectionEntry<'blog'>;
}

// `post` will match your 'blog' collection schema type
const { featurePost } = Astro.props;
---

<article class="relative overflow-hidden rounded-lg shadow transition hover:shadow-lg">
    <Image alt={featurePost.data.title} src={featurePost.data.image} class="absolute inset-0 h-full w-full object-cover" />

    <div class="relative bg-gradient-to-t from-gray-900/50 to-gray-900/25 pt-32 sm:pt-48 lg:pt-64">
        <div class="p-4 sm:p-6">
            <time datetime={featurePost.data.publishDate} class="block text-xs text-white/90">{featurePost.data.publishDate.toLocaleDateString()}</time>

            <a href={"/blog/" + featurePost.slug}>
                <h3 class="mt-0.5 text-2xl font-bold text-white">{featurePost.data.title}</h3>
            </a>

            <p class="mt-2 line-clamp-3 text-md/relaxed text-white/95">{featurePost.body}</p>
        </div>
    </div>
</article>
